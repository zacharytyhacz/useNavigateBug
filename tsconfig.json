{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2020",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noEmit": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "jest",
            "node"
        ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "exclude": [
        "./jest.config.js",
        "./dist",
        "./.cache"
    ]
}
